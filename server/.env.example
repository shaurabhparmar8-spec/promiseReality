# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/promise-realty
DB_NAME=promise-realty

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-complex
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-here-different-from-jwt-secret
JWT_REFRESH_EXPIRY=7d

# Security Configuration
BCRYPT_ROUNDS=12
USE_ARGON2=false
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4
ARGON2_HASH_LENGTH=32
RESET_TOKEN_TTL_MINUTES=15

# Email Configuration (Choose one email service)
EMAIL_PROVIDER=nodemailer # Options: nodemailer, sendgrid, aws-ses, resend
EMAIL_FROM=noreply@promiserealty.com
EMAIL_FROM_NAME=Promise Realty

# Nodemailer Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Resend Configuration
RESEND_API_KEY=your-resend-api-key

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3000/admin

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@promiserealty.com
DEFAULT_ADMIN_PHONE=9876543210
DEFAULT_ADMIN_PASSWORD=Admin@12345

# Development Features
ENABLE_MOCK_DATA=true
MOCK_DATA_FALLBACK=true
DEBUG_MODE=true
