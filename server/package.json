{
  "name": "promise-realty-server",
  "version": "1.0.0",
  "description": "Promise Realty Backend Server with Enhanced Security",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:security": "jest --testPathPattern=security --detectOpenHandles",
    "test:password-reset": "jest --testPathPattern=auth --detectOpenHandles",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "logs:tail": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "db:seed": "node scripts/seedDatabase.js",
    "db:cleanup": "node scripts/cleanupTokens.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "security",
    "password-reset",
    "authentication"
  ],
  "author": "Promise Realty Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.873.0",
    "@sendgrid/mail": "^7.7.0",
    "argon2": "^0.30.3",
    "aws-sdk": "^2.1367.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.1",
    "postmark": "^4.0.5",
    "rate-limit-mongo": "^2.3.2",
    "resend": "^0.16.0",
    "sharp": "^0.34.3",
    "winston": "^3.8.2",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "eslint": "^8.39.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
