# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/promise-realty?retryWrites=true&w=majority

# JWT Configuration - CHANGE THIS TO A STRONG RANDOM SECRET
JWT_SECRET=your-super-secure-random-jwt-secret-key-minimum-32-characters-long

# Client URL - Your actual domain
CLIENT_URL=https://yourdomain.com

# Email Configuration - Use your actual Gmail App Password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=Your Company Name <your-email@gmail.com>

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d
PASSWORD_RESET_EXPIRES=3600000

# Rate Limiting
LOGIN_RATE_LIMIT_WINDOW=900000
LOGIN_RATE_LIMIT_MAX=10
PASSWORD_RESET_RATE_LIMIT_WINDOW=900000
PASSWORD_RESET_RATE_LIMIT_MAX=5

# File Upload Configuration
MAX_FILE_SIZE=5242880
MAX_FILES=10
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp